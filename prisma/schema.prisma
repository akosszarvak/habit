generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
}


model User {
  id String @id @default(cuid())
  authId String
}

model Habit {
    id String @id @default(cuid())
    userId String
    name String
    createdAt DateTime @default(now())
    completions Completion[]
}

model Completion {
  id String @id @default(cuid())
  habitId String
  date DateTime
  habit Habit @relation(fields: [habitId], references: [id])
  @@unique([habitId, date])
}